{% macro invention_css(size) %}
    <style>
        .invention-header {
            width: 100%;
            height: 12%;
            position: absolute;
            top: 0;
            left: 0;
        }
        .invention-image {
            width: 100%;
            height: 60%;
            position: relative;
            top: 0;
            left: 0;
        }
        .invention-info {
            width: 97%;
            height: 40%;
            position: absolute;
            top: 54%;
            left: 0;
            padding: 1mm;
            font-size: {{ 'xx-small' if size == 'small' else 'x-small' }};
            z-index: 5;
        }
        .invention-footer {
            display: flex;
            width: 97%;
            height: 17%;
            position: absolute;
            bottom: 0;
            left: 0;
            padding: 1mm;
            font-size: {{ 'xx-small' if size == 'small' else 'x-small' }};
            font-style: italic;
            font-family: serif;
            line-height: 0.6rem;
            z-index: 5;
            color: var(--master-color);
        }
        .invention-footer span {
            align-self: flex-end;
        }
    </style>
{% endmacro %}


{% macro invention_card(data) %}
<div class="card-bg">
    <div class="card">
        <div class="invention-header">
        {{data}}
        </div>
        <div class="invention-image">
        </div>
        <div class="invention-info">
        </div>
        <div class="invention-footer">
        </div>
    </div>
</div>
{% endmacro %}